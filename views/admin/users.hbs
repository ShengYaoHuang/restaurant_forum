<h1>餐廳後台</h1>
<div>
  <a href='/admin/restaurants'>
    <button type="button" class="btn btn-outline-dark">Restaurant</button>
  </a>
  <a href='/admin/categories'>
    <button type="button" class="btn btn-outline-dark">Categories</button>
  </a>
  <a href='/admin/users'>
    <button type="button" class="btn btn-outline-dark">User</button>
  </a>
</div>
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
      <td>admin</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
          <button type="button" class="btn btn-link" data-toggle="modal" data-target="#adminToUser{{this.id}}">
            set as user
          </button>
          <div class="modal fade" id="adminToUser{{this.id}}" tabindex="-1" role="dialog"
            aria-labelledby="adminToUserTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="adminToUserTitle">即將變更使用者權限</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-dark">確認變更</button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </td>
      {{else}}
      <td>user</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
          <button type="button" class="btn btn-link" data-toggle="modal" data-target="#userToAdmin{{this.id}}">
            set as admin
          </button>
          <div class="modal fade" id="userToAdmin{{this.id}}" tabindex="-1" role="dialog"
            aria-labelledby="userToAdminTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="userToAdminTitle">即將變更使用者權限</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-dark">確認變更</button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>