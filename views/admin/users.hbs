<h1>餐廳後台</h1>

<a href='/admin/restaurants'>
  <button type="button" class="btn btn-primary btn-outline-dark">Restaurant</button>
</a>
<a href='/admin/users'>
  <button type="button" class="btn btn-primary btn-outline-dark">User</button>
</a>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
      <td>admin</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
          <button type="submit" class="btn btn-link" onclick="alert('確認變更？')">
            set as user
          </button>
        </form>
      </td>
      {{else}}
      <td>user</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
          <button type="submit" class="btn btn-link" onclick="alert('確認變更？')">
            set as admin
          </button>
        </form>
      </td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>